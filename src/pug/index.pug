        input.search-form__field(type="text" value="" placeholder="Search FAQ")
        button.search-form__btn.search-form__btn_type_close(type="button")
          <svg class="pointer-events-none" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.28499 3.35858C1.95549 3.02908 1.95549 2.49485 2.28499 2.16534C2.6145 1.83584 3.14873 1.83584 3.47823 2.16534L15.9538 14.6409C16.2833 14.9704 16.2833 15.5047 15.9538 15.8342C15.6243 16.1637 15.0901 16.1637 14.7606 15.8342L2.28499 3.35858Z" fill="currentColor"></path>
